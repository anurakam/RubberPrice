<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.11" >

    </RelativeLayout>

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="422dp" >

            <TextView
                android:id="@+id/price_water_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/textView1"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="35dp"
                android:text="@string/price_water" />

            <TextView
                android:id="@+id/price_sheet_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price_water_View"
                android:layout_below="@+id/price_water_View"
                android:layout_marginTop="19dp"
                android:text="@string/price_sheet" />

            <TextView
                android:id="@+id/price_sheet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_sheet_View"
                android:layout_alignBottom="@+id/price_sheet_View"
                android:layout_alignRight="@+id/price_water"
                android:text="60" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_sheet"
                android:layout_alignBottom="@+id/price_sheet"
                android:layout_alignLeft="@+id/textView4"
                android:text="@string/bath" />

            <TextView
                android:id="@+id/price_lump_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price_sheet_View"
                android:layout_below="@+id/price_sheet_View"
                android:layout_marginTop="20dp"
                android:text="@string/price_lump" />

            <TextView
                android:id="@+id/price_lump"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_lump_View"
                android:layout_alignBottom="@+id/price_lump_View"
                android:layout_alignLeft="@+id/price_sheet"
                android:text="100" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_lump"
                android:layout_alignBottom="@+id/price_lump"
                android:layout_alignLeft="@+id/textView7"
                android:text="@string/bath" />

            <TextView
                android:id="@+id/price_scrap_View"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price_lump_View"
                android:layout_below="@+id/price_lump_View"
                android:layout_marginTop="20dp"
                android:text="@string/price_scrap" />

            <TextView
                android:id="@+id/price_scrap"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_scrap_View"
                android:layout_alignBottom="@+id/price_scrap_View"
                android:layout_alignLeft="@+id/price_lump"
                android:text="40" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/price_scrap"
                android:layout_alignBottom="@+id/price_scrap"
                android:layout_alignLeft="@+id/textView10"
                android:text="@string/bath" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price_water_View"
                android:layout_alignParentTop="true"
                android:layout_marginTop="20dp"
                android:text="ราคายางวันนี้" />

            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/price_scrap_View"
                android:layout_below="@+id/price_scrap_View"
                android:layout_marginTop="31dp"
                android:text="@string/price_beyond" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/price_sheet_View"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:text="@string/bath" />

            <TextView
                android:id="@+id/price_water"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/price_sheet_View"
                android:layout_marginRight="21dp"
                android:layout_toLeftOf="@+id/textView4"
                android:text="50" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView14"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:orientation="vertical" >

                <WebView
                    android:id="@+id/webView1"
                    android:layout_width="fill_parent"
                    android:layout_height="165dp" />
            </LinearLayout>
        </RelativeLayout>

    </ScrollView>

    <Button
        android:id="@+id/Cal_Price_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4.11"
        android:background="@drawable/my_bg"
        android:text="@string/cal_price" />

</LinearLayout>